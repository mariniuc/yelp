<% include ../partials/header.ejs %>

<div class="row">
    <div class="col-md-12 text-center">
        <h1>Add new comment</h1>
        <form action="/campgrounds/<%= campground._id %>/comments" method="post" class="form-signin">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
            <a class="float-left mt-2" href="/campgrounds/<%= campground._id %>">Go Back</a>
        </form>
    </div>
</div>

