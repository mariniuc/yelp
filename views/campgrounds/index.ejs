<% include ../partials/header %>
<% if (currentUser && currentUser.isAdmin){ %>
    <h1>You Are Admin!</h1>
<% } %>
<header class="jumbotron">
    <div class="container">
        <h1>Campground Page</h1>
        <p>View our hand-picked campgrounds!</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">New Campground</a>
        </p>
        <form action="/campgrounds" method="get" class="form-inline">
            <div class="form-group">
                <input type="text" name="search" placeholder="Campground search..." class="form-control">
                <input type="submit" value="Search" class="btn btn-default">
            </div>
        </form>
    </div>
</header>

<div class="row text-center">
    <% campgrounds.forEach(function (campground) { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card">
                <img class="card-img-top" src="<%= campground.image.url %>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <p class="card-text"><%= campground.description %></p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </div>
            </div>

        </div>
    <% }); %>
</div>

<% include ../partials/footer %>
